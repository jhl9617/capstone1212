<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sidestyle">

    <TextView
        android:id="@+id/txtConditionMain"
        android:layout_width="389dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottomedge"
        android:gravity="center"
        android:text="조건을 설정합니다"
        android:textColor="#FF8200"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtConditionSetDate"
        android:layout_width="99dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/titlestyle"
        android:textColor="#FF8200"
        android:text="기간 설정"
        app:layout_constraintTop_toBottomOf="@id/txtConditionMain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/txtSetRegion"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#FF8200"
        android:text="지역 설정"
        app:layout_constraintTop_toBottomOf="@id/txtConditionEndDate"
        android:background="@drawable/titlestyle"
        app:layout_constraintLeft_toLeftOf="@id/txtConditionSetDate"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="264dp" />

    <TextView
        android:id="@+id/txtSetKind"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:text="축종 설정"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#FF8200"
        android:background="@drawable/titlestyle"
        app:layout_constraintLeft_toLeftOf="@id/txtSetRegion"
        app:layout_constraintTop_toBottomOf="@id/txtConditionGungu"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="380dp" />

    <Spinner
        android:id="@+id/edtConditionKind"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/txtSetKind"
        app:layout_constraintTop_toBottomOf="@id/txtSetKind"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:background="@drawable/btnstyle" />

    <EditText
        android:id="@+id/edtConditionStartDate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/backstyle"
        app:layout_constraintLeft_toRightOf="@id/txtConditionStartDate"
        app:layout_constraintTop_toTopOf="@id/txtConditionStartDate" />

    <TextView
        android:id="@+id/txtConditionSido"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="도시를 선택하세요 : "
        android:textSize="15dp"
        android:textColor="#0000FF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtSetRegion"
        app:layout_constraintLeft_toLeftOf="@id/txtSetRegion" />

    <Spinner
        android:id="@+id/edtConditionSido"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/backstyle"
        android:gravity="center"
        android:text="시/도 설정"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/txtConditionSido"
        app:layout_constraintTop_toTopOf="@id/txtConditionSido"/>



    <EditText
        android:id="@+id/edtConditionEndDate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/txtConditionEndDate"
        app:layout_constraintLeft_toRightOf="@id/txtConditionEndDate"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:background="@drawable/backstyle"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/txtConditionGungu"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="세부 지역을 선택하세요 : "
        android:textSize="15dp"
        android:textColor="#FF0000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtConditionSido"
        app:layout_constraintLeft_toLeftOf="@id/txtSetRegion"
        android:layout_marginRight="40dp"/>

    <Spinner
        android:id="@+id/edtConditionGungu"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/txtConditionGungu"
        app:layout_constraintLeft_toRightOf="@id/txtConditionGungu"
        android:textAlignment="center"
        android:background="@drawable/backstyle"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="265dp" />

    <TextView
        android:id="@+id/txtConditionStartDate"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="시작 일자"
        android:gravity="center"
        android:textColor="#0000FF"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtConditionMain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:id="@+id/txtConditionEndDate"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="종료 일자"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/txtConditionStartDate"
        app:layout_constraintLeft_toLeftOf="@id/txtConditionStartDate"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginRight="50dp"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="76dp" />

    <Button
        android:id="@+id/btnConditionSearch"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:text="검색"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btnstyle"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="630dp" />

    <ImageButton
        android:id="@+id/imgConditionStart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/edtConditionStartDate"
        app:layout_constraintTop_toTopOf="@id/edtConditionStartDate"
        app:srcCompat="@drawable/cal"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/imgConditionEnd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/edtConditionEndDate"
        app:layout_constraintTop_toTopOf="@id/edtConditionEndDate"
        app:srcCompat="@drawable/cal"
        android:scaleType="fitXY"/>
</androidx.constraintlayout.widget.ConstraintLayout>